<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<bean id="actor" class="com.stackroute.domain.Actor">
<constructor-arg name="actor" value="naveen"></constructor-arg>
    <constructor-arg name="gender" value="male"></constructor-arg>
    <constructor-arg name="age" value="17"></constructor-arg>
</bean>

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="actor" value="prakash"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="18"></constructor-arg>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="actor" value="kavin"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="17"></constructor-arg>
    </bean>
    <bean id="movie" class="com.stackroute.domain.Movie">

        <constructor-arg name="actor" ref="actor"></constructor-arg>
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>


    <bean id="movie1" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>

    <bean name="movieA,movieB" class="com.stackroute.domain.Movie" scope="prototype" autowire="byName">
    </bean>

    <bean name="movieC" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>

    <bean id="beanLifeCycle" class="com.stackroute.domain.BeanLifecycleDemoBean " init-method="customInit" destroy-method="customDestroy">
        <property name="message" value="messageee"></property>

    </bean>
    <bean id="beanPostProcessor" class="com.stackroute.domain.BeanPostProcessorDemoBean">

    </bean>

</beans>